<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/toolbar_height"
    >

    <LinearLayout
        android:id="@+id/alarm_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/nextTV"
            android:text="Next Alarm: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mTextView"
            android:enabled="false"/>

        <TextView
            android:id="@+id/connectTV"
            android:text="Bluetooth: Not Connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mTextView"
            android:enabled="false"/>

        <Button
            android:id="@+id/refreshDisplay"
            android:text="Refresh Display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:enabled="false"/>

        <Button
            android:id="@+id/resetAlarm"
            android:text="Reset Alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:enabled="false"/>

    </LinearLayout>

    <me.rishabhkhanna.customtogglebutton.CustomToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        app:radius="0dp"
        android:textOn="Toggle Blind Opening"
        android:textOff="Toggle Blind Opening"
        app:checkedColor="@color/colorPrimary"
        app:uncheckedColor="@color/colorPrimary"

        />



</RelativeLayout>
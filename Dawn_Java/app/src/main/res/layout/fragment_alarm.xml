<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.scowluga.dawn.AlarmFragment"
    android:orientation="vertical"
    android:paddingTop="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Open blinds with alarms?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mTextView"/>

        <ToggleButton
            android:id="@+id/toggleSwitch"
            android:textOn="Yes"
            android:textOff="No"

            style="@style/mToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alarm_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nextTV"
            android:text="Next Alarm: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mTextView"
            android:enabled="false"/>

        <TextView
            android:id="@+id/connectTV"
            android:text="Connected: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mTextView"
            android:enabled="false"/>

        <Button
            android:id="@+id/refreshDisplay"
            android:text="Refresh Display"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:enabled="false"/>

        <Button
            android:id="@+id/resetAlarm"
            android:text="Reset Alarm"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:enabled="false"/>

    </LinearLayout>
</LinearLayout>
